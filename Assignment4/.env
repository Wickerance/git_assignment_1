# --- PostgreSQL 配置 (用于 docker-compose) ---
POSTGRES_USER=auth_user
POSTGRES_PASSWORD=auth_secure_pass
POSTGRES_DB=auth_service_db

# --- 应用连接 DB 的 URL (用于 FastAPI) ---
# 格式: postgresql+psycopg2://user:pass@host:port/db_name
DATABASE_URL=postgresql://auth_user:auth_secure_pass@db:5432/auth_service_db

# --- JWT 密钥和过期时间 ---
SECRET_KEY=YOUR_SUPER_SECURE_JWT_KEY_4_AUTH_SERVICE
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# --- Redis 配置 ---
REDIS_HOST=redis
REDIS_PORT=6379