# --- PostgreSQL Configuration (Docker Compose) ---
POSTGRES_USER=auth_user
POSTGRES_PASSWORD=auth_secure_pass
POSTGRES_DB=auth_service_db

# --- Database Connection URL (FastAPI) ---
# Format: postgresql+asyncpg://user:pass@host:port/db_name
DATABASE_URL=postgresql+asyncpg://auth_user:auth_secure_pass@db:5432/auth_service_db

# --- JWT Settings ---
# SECRET_KEY must be kept secret in production!
SECRET_KEY=YOUR_SUPER_SECURE_JWT_KEY_4_AUTH_SERVICE
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# --- Redis Configuration ---
REDIS_HOST=redis
REDIS_PORT=6379